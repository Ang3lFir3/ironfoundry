<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:u="clr-namespace:CloudFoundry.Net.VsExtension.Ui.Controls.Utilities"
	x:Class="CloudFoundry.Net.VsExtension.Ui.Controls.Views.ManageCloudUrls"
	x:Name="Window"
	Title="Manage Cloud URLs"
	Width="700" Height="245"
	DataContext="{Binding ManageCloudUrls, Source={StaticResource Locator}}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
	<DockPanel Margin="10">     
		<StackPanel DockPanel.Dock="Top" Orientation="Vertical">
			<DockPanel>
				<DataGrid DockPanel.Dock="Left" AutoGenerateColumns="False" ItemsSource="{Binding CloudUrls}" 
                          SelectedItem="{Binding SelectedCloudUrl}"
                          HeadersVisibility="Column"
                          Background="{x:Null}"
                          HorizontalGridLinesBrush="{x:Null}"
                          Width="600" Height="155" FontSize="10.667">
                    <DataGrid.VerticalGridLinesBrush>
                        <SolidColorBrush Color="{DynamicResource BorderBlueColor}"/>
                    </DataGrid.VerticalGridLinesBrush>
                    <DataGrid.Columns>
						<DataGridTextColumn Header="Server Type" Binding="{Binding ServerType}" Width="233" />
						<DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="*"/>
					</DataGrid.Columns>
				</DataGrid>
				<StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
					<Button FontSize="10.667" Width="50" Content="Add..." Command="{Binding AddCommand}" />
                    <Button FontSize="10.667" Width="50" Margin="0,5,0,0" Content="Edit..." Command="{Binding EditCommand}" />
                    <Button FontSize="10.667" Width="50" Margin="0,5,0,0" Content="Remove" Command="{Binding RemoveCommand}" />	
				</StackPanel>
			</DockPanel>
		</StackPanel>  
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button FontSize="10.667" VerticalAlignment="Center" Margin="5,0,0,0" Width="90" Content="Ok" Command="{Binding ConfirmedCommand}" />
			<Button FontSize="10.667" VerticalAlignment="Center" Margin="5,0,0,0" Width="90" Content="Cancel" Command="{Binding CancelledCommand}" />
		</StackPanel>       
	</DockPanel>
</Window>